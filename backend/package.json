{
  "name": "business-chat-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:once": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && shx cp config.json dist/",
    "smoke": "node --import tsx scripts/smoke.ts",
    "seed:admin": "node --import tsx scripts/seed-admin.ts",
    "db:generate": "drizzle-kit generate",
    "db:push:local": "cross-env TURSO_DATABASE_URL=file:./local.db drizzle-kit push",
    "db:push:remote": "drizzle-kit push",
    "db:push": "npm run db:push:remote && npm run db:push:local",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@aws-sdk/s3-request-presigner": "^3.985.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@libsql/client": "^0.17.0",
    "@tursodatabase/sync": "^0.4.4",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "hash-wasm": "^4.12.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^8.0.1",
    "pino": "^9.0.0",
    "socket.io": "^4.8.3",
    "ulid": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.6",
    "@types/nodemailer": "^7.0.9",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.9",
    "pino-pretty": "^11.0.0",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}